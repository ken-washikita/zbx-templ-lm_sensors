#!/usr/bin/perl

use strict;
use warnings;
use JSON;

my $s = `sensors -j 2>/dev/null`;
$s =~ s/\n//g;
my $j = decode_json($s);

my $f = 0;
print "[\n";
foreach my $chip (keys %$j) {
	foreach my $unit (keys %{$j->{$chip}}) {
		if (ref($j->{$chip}->{$unit}) eq "HASH") {
			foreach my $val (keys %{$j->{$chip}->{$unit}}) {
				if ($val =~ m/_input$/) {
					print ",\n" if ($f);
					$f = 1;
					printf("{\"{#CHIPNAME}\":\"%s\",\"{#UNITNAME}\":\"%s\",\"{#VALNAME}\":\"%s\"}", $chip, $unit, $val);
				}
			}
		}
	}
}
print "]\n";

exit 0;
